#!/bin/bash

set -e

shopt -s dotglob
echo "--->> $(rm -vrf vendor/ composer.lock)"

if [ -f ".env.local" ]; then
    # Ensure there's a line ending
    echo "---->> Append .env.local"
    echo "" >> .env
    cat .env.local >> .env
fi

env

/usr/libexec/s2i/assemble

pushd /opt/app-root/src

echo "---->> Run npm run prod"
npm install cross-env
npm run prod

