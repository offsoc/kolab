#!/bin/bash

set -e

shopt -s dotglob
echo "--->> $(rm -vrf vendor/ composer.lock)"

cp -v /tmp/src/.env.example .env

if [ -f ".env.local" ]; then
    # Ensure there's a line ending
    echo "----> Apend .env.local"
    echo "" >> .env
    cat .env.local >> .env
fi

/usr/libexec/s2i/assemble

pushd /opt/app-root/src

echo "----> Run npm run dev"
npm install cross-env
npm run dev

